{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ product.name }}</h1>
    <p class="text-muted">Vu {{ product.nbViews }} fois,
        publié le
        {{ product.createdAt | date('d/m/Y à H:i', 'Europe/Paris') }},
        prix : {{ product.price }}€</p>
    <p>{{ product.description }}</p>

    <a href="{{ path('app_product_update', {id:product.id}) }}"
       class="btn btn-outline-info">Modifier</a>

    <a href="{{ path('app_product_remove', {id:product.id}) }}"
       class="btn btn-outline-danger">Supprimer</a>
{% endblock %}

